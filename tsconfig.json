{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es6", "ES2015", "ES2016", "ES2017", "DOM", "esnext"
    ],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./dist",
		"sourceMap": false
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
